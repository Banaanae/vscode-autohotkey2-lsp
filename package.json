{
	"name": "vscode-autohotkey2-lsp",
	"displayName": "AutoHotKey2 Language Server",
	"description": "Autohotkey2 Language Support using vscode-lsp.",
	"author": "thqby",
	"publisher": "thqby",
	"version": "0.2.9",
	"license": "LGPLv3.0",
	"categories": [
		"Formatters",
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"ahk2",
		"autohotkey2",
		"AutoHotkey2"
	],
	"repository": "https://gitee.com/orz707/vscode-autohotkey2-lsp/tree/master",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ahk2",
		"onCommand:run.ahk2"
	],
	"main": "./client/dist/extension",
	"contributes": {
		"breakpoints": [
			{
				"language": "ahk2"
			}
		],
		"languages": [
			{
				"id": "ahk2",
				"aliases": [
					"AutoHotkey2",
					"autohotkey2",
					"ahk2"
				],
				"extensions": [
					".ahk",
					".ah2",
					".ahk2"
				],
				"configuration": "./ahk2.configuration.json"
			},
			{
				"id": "ahk2-output",
				"mimetypes": [
					"text/x-code-output"
				]
			}
		],
		"grammars": [
			{
				"language": "ahk2",
				"scopeName": "source.ahk2",
				"path": "./syntaxes/ahk2.tmLanguage.json"
			},
			{
				"language": "ahk2-output",
				"scopeName": "ahk2.output",
				"path": "./syntaxes/ahk2-output.tmLanguage.json"
			}
		],
		"configuration": {
			"id": "AutoHotkey2",
			"title": "AutoHotkey2",
			"properties": {
				"AutoHotkey2.Path": {
					"scope": "window",
					"type": "string",
					"default": "C:\\Program Files\\Autohotkey\\AutoHotkey.exe",
					"description": "AutoHotkey.exe可执行文件的路径。"
				},
				"AutoHotkey2.Trace": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "跟踪VS Code和AutoHotKey2语言服务器之间的通信。"
				}
			}
		},
		"configurationDefaults": {
			"[ahk2]": {
				"editor.detectIndentation": true,
				"editor.autoIndent": "brackets",
				"editor.insertSpaces": false,
				"editor.quickSuggestions": {
					"other": true,
					"comments": false,
					"strings": true
				}
			}
		},
		"commands": [
			{
				"command": "ahk2.run",
				"title": "运行脚本",
				"category": "ahk2"
			},
			{
				"command": "ahk2.selection.run",
				"title": "运行选择的脚本",
				"category": "ahk2"
			},
			{
				"command": "ahk2.stop",
				"title": "停止运行中的脚本",
				"category": "ahk2"
			},
			{
				"command": "ahk2.help",
				"title": "快捷帮助",
				"category": "ahk2"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "!inOutput && editorHasSelection",
					"command": "ahk2.selection.run",
					"group": "navigation"
				},
				{
					"when": "!inOutput && !editorHasSelection",
					"command": "ahk2.run",
					"group": "navigation"
				},
				{
					"command": "ahk2.help",
					"group": "navigation"
				},
				{
					"when": "inOutput",
					"command": "ahk2.stop",
					"group": "stop-code-run"
				}
			]
		},
		"keybindings": [
			{
				"command": "ahk2.run",
				"key": "ctrl+f5",
				"when": "!editorHasSelection"
			},
			{
				"command": "ahk2.selection.run",
				"key": "ctrl+f5",
				"when": "editorHasSelection"
			},
			{
				"command": "ahk2.help",
				"key": "ctrl+f1"
			},
			{
				"command": "ahk2.stop",
				"key": "ctrl+f6"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"test": "node ./client/out/test/runTest",
		"patch": "npm version patch",
		"publish": "vsce publish",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"@types/vscode": "1.43.0",
		"eslint": "^6.4.0",
		"mocha": "^8.0.1",
		"typescript": "^3.9.4",
		"ts-loader": "^8.0.14",
		"webpack": "^5.14.0",
		"webpack-cli": "^4.3.1"
	},
	"dependencies": {
		"vsce": "^1.83.0",
		"vscode-languageclient": "^6.1.3",
		"vscode-languageserver": "^6.1.1",
		"vscode-languageserver-textdocument": "^1.0.1",
		"vscode-uri": "^3.0.2"
	}
}
