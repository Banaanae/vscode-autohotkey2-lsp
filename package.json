{
	"name": "vscode-autohotkey2-lsp",
	"displayName": "AutoHotKey2 Language Server",
	"description": "Autohotkey2 Language Support using vscode-lsp.",
	"author": "thqby",
	"publisher": "thqby",
	"version": "0.2.0",
	"license": "LGPLv3.0",
	"categories": [
		"Debuggers",
		"Formatters",
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"ahk2",
		"autohotkey2",
		"AutoHotkey2"
	],
	"repository": "https://gitee.com/orz707/vscode-autohotkey2-lsp/tree/master",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ahk2",
		"onCommand:run.ahk2",
		"onDebug"
	],
	"main": "./client/out/extension",
	"contributes": {
		"breakpoints": [
			{
				"language": "ahk2"
			}
		],
		"languages": [
			{
				"id": "ahk2",
				"aliases": [
					"AutoHotkey2",
					"autohotkey2",
					"ahk2"
				],
				"extensions": [
					".ahk",
					".ah2",
					".ahk2"
				],
				"configuration": "./ahk2.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ahk2",
				"scopeName": "source.ahk2",
				"path": "./syntaxes/ahk2.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "ahk2",
				"path": "./snippets/ahk2.json"
			}
		],
		"configuration": {
			"id": "AutoHotkey2",
			"title": "AutoHotkey2",
			"properties": {
				"AutoHotkey2.Path": {
					"scope": "window",
					"type": "string",
					"default": "C:\\Program Files\\Autohotkey\\AutoHotkey.exe",
					"description": "AutoHotkey.exe可执行文件的路径。"
				},
				"AutoHotkey2.Trace": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "跟踪VS Code和AutoHotKey2语言服务器之间的通信。"
				}
			}
		},
		"configurationDefaults": {
			"[ahk2]": {
				"editor.detectIndentation": true,
				"editor.autoIndent": "brackets",
				"editor.insertSpaces": false,
				"editor.quickSuggestions": {
					"other": true,
					"comments": false,
					"strings": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "node ./client/out/test/runTest",
		"publish": "vsce publish",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"mocha": "^8.0.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.9.4"
	},
	"dependencies": {
		"vsce": "^1.83.0"
	}
}
