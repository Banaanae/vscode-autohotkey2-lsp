{
	"name": "vscode-autohotkey2-lsp",
	"displayName": "AutoHotKey2 Language Support",
	"description": "Autohotkey2 Language Support using vscode-lsp.",
	"author": "thqby",
	"publisher": "thqby",
	"version": "0.6.8",
	"license": "LGPLv3.0",
	"categories": [
		"Formatters",
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"ahk2",
		"autohotkey2",
		"AutoHotkey2"
	],
	"repository": "https://github.com/thqby/vscode-autohotkey2-lsp/tree/master",
	"homepage": "https://github.com/thqby/vscode-autohotkey2-lsp/blob/master/README.md",
	"icon": "icon.png",
	"bugs": {
		"url": "https://github.com/thqby/vscode-autohotkey2-lsp/issues"
	},
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ahk2"
	],
	"main": "./client/dist/extension",
	"contributes": {
		"breakpoints": [
			{
				"language": "ahk2"
			}
		],
		"languages": [
			{
				"id": "ahk2",
				"aliases": [
					"AutoHotkey2",
					"autohotkey2",
					"ahk2"
				],
				"extensions": [
					".ahk",
					".ah2",
					".ahk2"
				],
				"configuration": "./ahk2.configuration.json"
			},
			{
				"id": "ahk2-output",
				"mimetypes": [
					"text/x-code-output"
				]
			}
		],
		"grammars": [
			{
				"language": "ahk2",
				"scopeName": "source.ahk2",
				"path": "./syntaxes/ahk2.tmLanguage.json"
			},
			{
				"language": "ahk2-output",
				"scopeName": "ahk2.output",
				"path": "./syntaxes/ahk2-output.tmLanguage.json"
			}
		],
		"configuration": {
			"id": "AutoHotkey2",
			"title": "AutoHotkey2",
			"properties": {
				"AutoHotkey2.Path": {
					"scope": "window",
					"type": "string",
					"default": "C:\\Program Files\\Autohotkey\\AutoHotkey.exe",
					"description": "%ahk2.exepath%"
				},
				"AutoHotkey2.AutoLibInclude": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "%ahk2.autolibinclude%"
				},
				"AutoHotkey2.DefaultDebugger": {
					"scope": "window",
					"type": "string",
					"default": "zero-plusplus.vscode-autohotkey-debug",
					"description": "%ahk2.defaultdebugger%"
				}
			}
		},
		"configurationDefaults": {
			"[ahk2]": {
				"editor.detectIndentation": true,
				"editor.autoIndent": "brackets",
				"editor.insertSpaces": false,
				"editor.quickSuggestions": {
					"other": true,
					"comments": false,
					"strings": true
				}
			}
		},
		"commands": [
			{
				"command": "ahk2.debug",
				"title": "%ahk2.debug%",
				"category": "ahk2"
			},
			{
				"command": "ahk2.debug.params",
				"title": "%ahk2.debug.params%",
				"category": "ahk2"
			},
			{
				"command": "ahk2.run",
				"title": "%ahk2.run%",
				"category": "ahk2"
			},
			{
				"command": "ahk2.selection.run",
				"title": "%ahk2.selection.run%",
				"category": "ahk2"
			},
			{
				"command": "ahk2.stop",
				"title": "%ahk2.stop%",
				"category": "ahk2"
			},
			{
				"command": "ahk2.compile",
				"title": "%ahk2.compile%",
				"category": "ahk2"
			},
			{
				"command": "ahk2.help",
				"title": "%ahk2.help%",
				"category": "ahk2"
			},
			{
				"command": "ahk2.generate.comment",
				"title": "%ahk2.generatecomment%",
				"category": "ahk2"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == ahk2 && !inDebugMode",
					"command": "ahk2.debug",
					"group": "navigation@1"
				},
				{
					"when": "editorLangId == ahk2 && !inDebugMode",
					"command": "ahk2.debug.params",
					"group": "navigation@2"
				},
				{
					"when": "editorLangId == ahk2 && editorHasSelection",
					"command": "ahk2.selection.run",
					"group": "navigation@0"
				},
				{
					"when": "editorLangId == ahk2 && !editorHasSelection",
					"command": "ahk2.run",
					"group": "navigation@0"
				},
				{
					"when": "editorLangId == ahk2",
					"command": "ahk2.compile",
					"group": "navigation@1"
				},
				{
					"when": "editorLangId == ahk2",
					"command": "ahk2.help",
					"group": "navigation@1"
				},
				{
					"when": "editorLangId == ahk2 && ahk2:isRunning",
					"command": "ahk2.stop",
					"group": "navigation@0"
				},
				{
					"when": "editorLangId == ahk2",
					"command": "ahk2.generate.comment",
					"group": "navigation@2"
				}
			]
		},
		"keybindings": [
			{
				"command": "ahk2.run",
				"key": "ctrl+f5",
				"when": "editorLangId == ahk2 && !editorHasSelection"
			},
			{
				"command": "ahk2.selection.run",
				"key": "ctrl+f5",
				"when": "editorLangId == ahk2 && editorHasSelection"
			},
			{
				"command": "ahk2.compile",
				"key": "ctrl+shift+f5",
				"when": "editorLangId == ahk2"
			},
			{
				"command": "ahk2.debug",
				"key": "f5",
				"when": "editorLangId == ahk2 && !inDebugMode"
			},
			{
				"command": "ahk2.help",
				"key": "ctrl+f1",
				"when": "editorLangId == ahk2"
			},
			{
				"command": "ahk2.stop",
				"key": "ctrl+f6",
				"when": "editorLangId == ahk2 && ahk2:isRunning"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"patch": "npm version patch",
		"publish": "vsce publish",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"@types/vscode": "1.43.0",
		"eslint": "^6.4.0",
		"mocha": "^8.0.1",
		"typescript": "^3.9.4",
		"ts-loader": "^8.0.14",
		"webpack": "^5.14.0",
		"webpack-cli": "^4.3.1"
	},
	"dependencies": {
		"vsce": "^1.83.0",
		"vscode-languageclient": "^6.1.3",
		"vscode-languageserver": "^6.1.1",
		"vscode-languageserver-textdocument": "^1.0.1",
		"vscode-uri": "^3.0.2"
	}
}
