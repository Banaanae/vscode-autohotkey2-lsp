{
	"name": "vscode-autohotkey2-lsp",
	"displayName": "AutoHotKey2 Language Server",
	"description": "Autohotkey2 Language Support using vscode-lsp.",
	"author": "thqby",
	"publisher": "thqby",
	"version": "0.2.0",
	"license": "LGPLv3.0",
	"categories": [
		"Debuggers",
		"Formatters",
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"ahk2",
		"autohotkey2",
		"AutoHotkey2"
	],
	"repository": "",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ahk2"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "ahk2",
				"aliases": [
					"AutoHotkey2",
					"autohotkey2",
					"ahk2"
				],
				"extensions": [
					".ahk",
					".ah2",
					".ahk2"
				],
				"configuration": "./ahk2.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ahk2",
				"scopeName": "source.ahk2",
				"path": "./syntaxes/ahk2.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "ahk2",
				"path": "./snippets/ahk2.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "AutoHotKey2",
			"properties": {
				"Autohotkey2LanguageServer.ahkpath": {
					"scope": "window",
					"type": "string",
					"default": "C:\\Program Files\\Autohotkey\\AutoHotkey.exe",
					"description": "Absolute path to a AutoHotkey.exe file."
				},
				"Autohotkey2LanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "node ./client/out/test/runTest",
		"publish": "vsce publish",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"mocha": "^8.0.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.9.4"
	}
}
